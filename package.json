{
  "name": "ecies-25519",
  "description": "Isomorphic Cryptography Library for X25519 ECIES",
  "version": "2.0.0-beta.1",
  "author": "Pedro Gomes <github.com/pedrouid>",
  "license": "MIT",
  "keywords": [
    "ecc",
    "eddsa",
    "ecdh",
    "ecies",
    "crypto",
    "cryptography",
    "curve25519",
    "ed25519",
    "x25519",
    "elliptic",
    "curve"
  ],
  "files": [
    "dist",
    "sync"
  ],
  "main": "dist/cjs/index.js",
  "exports": {
    ".": {
      "node": "./dist/cjs/node/index.js",
      "browser": "./dist/esm/browser/index.js",
      "default": "./dist/cjs/fallback/index.js"
    },
    "./sync": {
      "node": "./dist/cjs/node/sync.js",
      "browser": "./dist/esm/browser/sync.js",
      "default": "./dist/cjs/fallback/sync.js"
    }
  },
  "types": "dist/cjs/index.d.ts",
  "unpkg": "dist/umd/index.min.js",
  "homepage": "https://github.com/pedrouid/ecies-25519",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedrouid/ecies-25519.git"
  },
  "bugs": {
    "url": "https://github.com/pedrouid/ecies-25519/issues"
  },
  "scripts": {
    "start": "tsdx watch",
    "clean": "rm -rf dist",
    "build:cjs": "./node_modules/.bin/tsc -p tsconfig.cjs.json",
    "build:umd": "webpack",
    "build:esm": "yarn tsc -p tsconfig.esm.json",
    "build": "yarn clean && yarn build:cjs && yarn build:umd && yarn build:esm",
    "test": "tsdx test ./test",
    "lint": "tsdx lint src test",
    "prepare": "yarn lint && yarn build && yarn test",
    "publish:beta": "yarn publish --tag=beta"
  },
  "dependencies": {
    "@pedrouid/iso-crypto": "^2.0.0-beta.1",
    "@stablelib/x25519": "^1.0.0",
    "enc-utils": "^3.0.0"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.1.3",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "husky": "^4.3.0",
    "tsdx": "^0.14.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
